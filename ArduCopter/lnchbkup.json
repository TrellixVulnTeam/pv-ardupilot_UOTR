    "version": "0.2.0",
    "configurations": [
        {
            "type": "cppdbg",
            //"name": "(gdb) Attach",
            "name":  "ardupilot SITL gdb attach",
            "request": "attach",
            "program" : "build/sitl/bin/arducopter",
            "processId": "${command:pickProcess}",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}